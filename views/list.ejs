<%- include('header'); -%>

<div class="box" id="heading">
  <h1> <%= listTitle %> </h1>
</div>

<div class="box">
  <% newListItems.forEach(function(items){ %>
    <form class="" action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="checkbox" value="<%=items._id%>" onChange="this.form.submit()">
        <p><%= items.name %></p>
      </div>
      <input type="hidden" name="listName" value="<%= listTitle %>"></input>
    </form>
  <% }); %>


  <form class="item" action="/" method="post">
    <input id="thingList" type="text" name="addItem" placeholder="New Item" autocomplete="off">
    <button type="submit" name="list" value=<%= listTitle %>>+</button>
  </form>
</div>

<%- include('footer'); -%>
